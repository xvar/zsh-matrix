syntax on
colorscheme koehler

set number
set nowrap
set showbreak=+++
set textwidth=128
set visualbell
set mouse=a

set hlsearch
set smartcase
set ignorecase
set incsearch

set autoindent
set expandtab
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4

set ruler
set guicursor+=ve:ver35-Cursor

set undolevels=1000
set backspace=indent,eol,start

